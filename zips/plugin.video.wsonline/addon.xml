<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.wsonline" name="WatchSeries-Online" version="1.0.1" provider-name="moedje">
    <requires>
        <import addon="xbmc.python" version="2.24.0"/>
        <import addon="script.module.kodiswift"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <language>en</language>
        <summary>Watchseries-online TV Plugin</summary>
        <description>Get the latest TV episodes on Watchseries-Online.la and search for a series, list all online
            episodes in that series, and play them from Openload.Co or VODlocker
        </description>
    </extension>
</addon>
